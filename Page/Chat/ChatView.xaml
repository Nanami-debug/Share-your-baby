<Page
    x:Class="Form.Page.Chat.ChatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Form.Page.Chat"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:Form.Models"
    Title="ChatView"
    mc:Ignorable="d">
    <Border
        Width="400"
        Height="560"
        Padding="0">
        <Border.Background>
            <ImageBrush ImageSource="../../Asset/Img/chat.png" />
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="42" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="60" />
            </Grid.ColumnDefinitions>
            <ScrollViewer
                x:Name="Scroller"
                Grid.ColumnSpan="2"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl Name="Ic" d:ItemsSource="{d:SampleData ItemCount=2}">
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Grid.Margin" Value="0" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel VerticalAlignment="Top" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <hc:ChatBubble Content="{Binding Msg}" Role="{Binding Role}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Border
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Background="#f5f5f5" />
            <TextBox
                Name="txtSendMsg"
                Grid.Row="1"
                Height="20"
                Margin="10,0,10,0"
                Style="{StaticResource TextBoxExtend}" />
            <Button
                Name="btnSend"
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,10,0"
                Background="#326cf3"
                Click="btnSend_Click"
                Content="发送"
                Foreground="White" />
        </Grid>
    </Border>
</Page>