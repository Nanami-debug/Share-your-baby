<Page
    x:Class="Form.Page.Order.OrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ElderlyView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="{StaticResource FontD}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox
                Name="txtId"
                Width="200"
                Height="26"
                hc:InfoElement.Placeholder="订单号"
                Style="{StaticResource TextBoxExtend}" />
            <Button
                Margin="10,0,0,0"
                Click="Search_Click"
                Content="搜索" />
        </StackPanel>
        <DataGrid
            x:Name="dgdData"
            Grid.Row="1"
            Margin="0,10,0,0"
            AutoGenerateColumns="False"
            CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn
                    Width="80"
                    Header="图片"
                    IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Height="40" Source="{Binding img}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Binding="{Binding Id}"
                    Header="订单号"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding goodId}"
                    Header="商品名"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding des}"
                    Header="详情"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding orderStatus}"
                    Header="订单状态"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding buyerId}"
                    Header="买入方"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding sellerId}"
                    Header="销售方"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding address}"
                    Header="地址"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding transactionType}"
                    Header="关系"
                    IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>