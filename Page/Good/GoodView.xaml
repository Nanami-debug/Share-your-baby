<Page
    x:Class="Form.Page.Good.GoodView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:Form.Models"
    Title="BedView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#f7f7f7"
    FontFamily="{StaticResource FontD}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox
                Name="txtId"
                Width="200"
                Height="26"
                hc:InfoElement.Placeholder="商品名"
                Style="{StaticResource TextBoxExtend}" />
            <Button
                Margin="10,0,0,0"
                Click="Search_Click"
                Content="搜索" />
        </StackPanel>
        <ItemsControl Name="Ic" Grid.Row="1">
            <ItemsControl.Template>
                <ControlTemplate TargetType="{x:Type ItemsControl}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Grid.Margin" Value="10" />
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.Resources>
                <DataTemplate DataType="{x:Type md:GoodViewModel}">
                    <Border
                        Width="200"
                        Height="265"
                        Background="White"
                        BorderBrush="#e2e2e2"
                        BorderThickness="1"
                        CornerRadius="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="180" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border
                                Width="200"
                                Height="180"
                                VerticalAlignment="Top"
                                CornerRadius="10,10,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding Pic}" />
                                </Border.Background>
                            </Border>

                            <TextBlock
                                Grid.Row="1"
                                Margin="10,10,0,25"
                                VerticalAlignment="Top"
                                FontSize="15"
                                Text="{Binding Name}" />

                            <StackPanel
                                Grid.Row="1"
                                Margin="10,12,10,5"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="{Binding UserId, StringFormat='{}卖家:{0}'}" />
                                <Border
                                    Width="30"
                                    Height="15"
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    BorderBrush="#e84133"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Visibility="{c:Binding IsSelf,
                                                           FalseToVisibility=Collapsed}">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="10"
                                        Foreground="#e84133"
                                        Text="本人" />
                                </Border>
                            </StackPanel>
                            <TextBlock
                                Grid.Row="1"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="Gray"
                                Text="{Binding Des}" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,10,15,8"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                FontSize="17"
                                Foreground="#e84133"
                                Text="{Binding Price, StringFormat='{}¥{0}'}" />
                            <StackPanel
                                Grid.Row="1"
                                Margin="10,0,0,8"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal">
                                <Button
                                    Height="20"
                                    Margin="0,0,5,0"
                                    Padding="2"
                                    BorderBrush="#1d5390"
                                    Click="Modi"
                                    Content="修改"
                                    FontSize="11"
                                    Visibility="{c:Binding IsSelf,
                                                           FalseToVisibility=Collapsed}" />
                                <Button
                                    Height="20"
                                    Margin="0,0,5,0"
                                    Padding="2"
                                    BorderBrush="#1d5390"
                                    Click="Buy"
                                    Content="购买"
                                    FontSize="11"
                                    Visibility="{c:Binding '!IsSelf',
                                                           FalseToVisibility=Collapsed}" />
                                <Button
                                    Height="20"
                                    Margin="0,0,5,0"
                                    Padding="2"
                                    BorderBrush="#1d5390"
                                    Click="Chat"
                                    Content="聊一聊"
                                    FontSize="11"
                                    Visibility="{c:Binding '!IsSelf',
                                                           FalseToVisibility=Collapsed}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.Resources>
        </ItemsControl>

        <Button
            Grid.Row="1"
            Width="200"
            Margin="0,0,0,20"
            VerticalAlignment="Bottom"
            Click="AddGood"
            Content="+发布我的二手商品"
            Style="{StaticResource StandButtonPrimaryStyle}" />
    </Grid>
</Page>