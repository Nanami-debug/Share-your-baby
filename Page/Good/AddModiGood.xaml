<Page
    x:Class="Form.Page.Good.AddModiGood"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RegView"
    d:DesignHeight="450"
    d:DesignWidth="300"
    FontFamily="{StaticResource FontD}"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="GrdMain">
            <StackPanel Margin="10">
                <DockPanel Margin="0,10,0,0" HorizontalAlignment="Stretch">
                    <Border
                        Width="150"
                        Height="150"
                        Margin="20,0,0,0"
                        BorderBrush="#1d5390"
                        BorderThickness="1"
                        CornerRadius="6">
                        <Image Name="Img" />
                    </Border>
                    <Button
                        Width="50"
                        Height="30"
                        Click="ChangePic"
                        Content="选择"
                        Style="{StaticResource ButtonPrimary}" />
                </DockPanel>
                <TextBox
                    Name="txtId"
                    Margin="0,10,0,0"
                    hc:TitleElement.Title="名称"
                    Style="{StaticResource TextBoxExtend}" />

                <TextBox
                    Name="txtPrice"
                    Margin="0,10,0,0"
                    hc:TitleElement.Title="价格"
                    Style="{StaticResource TextBoxExtend}" />
                <TextBox
                    Name="txtDes"
                    Margin="0,10,0,0"
                    hc:TitleElement.Title="描述"
                    Style="{StaticResource TextBoxExtend}" />
            </StackPanel>
            <StackPanel
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    Width="150"
                    Height="30"
                    Click="Ai_Click"
                    Content="DeepSeek智能估价"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="100"
                    Height="30"
                    Margin="10,0,0,0"
                    Click="Save_Click"
                    Content="确认"
                    Style="{StaticResource ButtonPrimary}" />
            </StackPanel>
        </Grid>
        <Border x:Name="BrdLoad" Visibility="Collapsed">
            <hc:LoadingCircle />
        </Border>
    </Grid>
</Page>