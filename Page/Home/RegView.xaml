<Page
    x:Class="Form.Page.Home.RegView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Form.Page.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RegView"
    d:DesignHeight="450"
    d:DesignWidth="300"
    FontFamily="{StaticResource FontD}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <DockPanel Margin="0,10,0,0" HorizontalAlignment="Stretch">
                <Border
                    Width="150"
                    Height="150"
                    Margin="20,0,0,0"
                    BorderBrush="#1d5390"
                    BorderThickness="1"
                    CornerRadius="6">
                    <Image Name="Img" />
                </Border>
                <Button
                    Width="50"
                    Height="30"
                    Click="ChangePic"
                    Content="选择"
                    Style="{StaticResource ButtonPrimary}" />
            </DockPanel>
            <TextBox
                Name="txtId"
                Margin="0,10,0,0"
                hc:InfoElement.Placeholder="用户名"
                Style="{StaticResource TextBoxExtend}" />
            <TextBox
                Name="txtCall"
                Margin="0,10,0,0"
                hc:InfoElement.Placeholder="电话"
                Style="{StaticResource TextBoxExtend}" />
            <PasswordBox
                Name="txtPsd"
                Margin="0,10,0,0"
                hc:InfoElement.Placeholder="密码"
                Style="{StaticResource PasswordBoxExtend}" />
            <PasswordBox
                Name="txtCPsd"
                Margin="0,10,0,0"
                hc:InfoElement.Placeholder="确认密码"
                Style="{StaticResource PasswordBoxExtend}" />
        </StackPanel>
        <StackPanel Margin="10" VerticalAlignment="Bottom">
            <Button
                Width="200"
                Height="30"
                Click="Reg_Click"
                Content="确认"
                Style="{StaticResource ButtonPrimary}" />
        </StackPanel>
    </Grid>
</Page>
