<Page
    x:Class="Form.Page.MyInfo.MyInfoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BedView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    FontFamily="{StaticResource FontD}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <DockPanel Margin="0,10,0,0" HorizontalAlignment="Stretch">
                <Border
                    Width="200"
                    Height="200"
                    Margin="20,0,0,0"
                    BorderBrush="#1d5390"
                    BorderThickness="1"
                    CornerRadius="6">
                    <Image Name="Img" />
                </Border>
                <Button
                    Width="150"
                    Height="30"
                    Click="ChangePic"
                    Content="更换头像"
                    Style="{StaticResource ButtonPrimary}" />
            </DockPanel>
            <TextBox
                Name="txtId"
                Margin="0,10,0,0"
                hc:InfoElement.Placeholder="用户名"
                IsReadOnly="True"
                Style="{StaticResource TextBoxExtend}" />
            <TextBox
                Name="txtAddress"
                Margin="0,10,0,0"
                hc:InfoElement.Placeholder="地址"
                Style="{StaticResource TextBoxExtend}" />
            <PasswordBox
                Name="txtPsd"
                Margin="0,10,0,0"
                hc:InfoElement.Placeholder="密码"
                Style="{StaticResource PasswordBoxExtend}" />
        </StackPanel>
        <StackPanel Margin="10" VerticalAlignment="Bottom">
            <Button
                Width="200"
                Height="30"
                Click="Modi"
                Content="修改"
                Style="{StaticResource ButtonPrimary}" />
        </StackPanel>
    </Grid>
</Page>