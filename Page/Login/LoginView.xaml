<Window
    x:Class="Form.Page.Login.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    Width="300"
    Height="255"
    Closed="{s:Action Close}"
    FontFamily="{StaticResource FontD}"
    Loaded="{s:Action Load}"
    Style="{StaticResource StandWindowStyle}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="43" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.ColumnSpan="2"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            TextBlock.FontSize="14">
            <TextBlock
                Margin="20,0"
                VerticalAlignment="Center"
                FontSize="18"
                Foreground="Black"
                Text="登录" />
        </StackPanel>
        <StackPanel
            Grid.ColumnSpan="2"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            TextBlock.Foreground="#FF6590C1">
            <TextBlock
                Margin="0,0,26,0"
                VerticalAlignment="Center"
                FontFamily="{StaticResource Iconfont}"
                FontSize="20"
                Text="&#xe680;" />
            <TextBlock
                Margin="0,0,24,0"
                VerticalAlignment="Center"
                FontFamily="{StaticResource Iconfont}"
                FontSize="17"
                Text="&#xe67f;" />
            <TextBlock
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                FontFamily="{StaticResource Iconfont}"
                FontSize="22"
                Text="&#xe682;" />
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBox
                Name="txtUserNo"
                Width="200"
                Margin="0,40,0,0"
                hc:InfoElement.Placeholder="账号"
                Style="{StaticResource TextBoxExtend}" />
            <PasswordBox
                Name="psdPassword"
                Width="200"
                Margin="0,10,0,0"
                hc:InfoElement.Placeholder="密码"
                Style="{StaticResource PasswordBoxExtend}" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom">
            <Button
                Width="200"
                Margin="0,0,0,10"
                Command="{s:Action Login}"
                Content="登录"
                Style="{StaticResource StandButtonPrimaryStyle}" />
            <Button
                Width="200"
                Margin="0,0,0,20"
                Command="{s:Action Reg}"
                Content="注册"
                Style="{StaticResource StandButtonPrimaryStyle}" />
        </StackPanel>
    </Grid>
</Window>